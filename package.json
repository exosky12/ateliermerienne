{
	"type": "module",
	"private": "true",
	"license": "UNLICENSED",
	"scripts": {
		"frontend:dev": "pnpm -F @apps/frontend dev",
		"server:dev": "pnpm -F @apps/server dev",
		"dev": "pnpm run frontend:dev & pnpm run server:dev",
		"docker:up": "docker compose up -d",
		"docker:down": "docker compose down",
		"lint": "pnpm -r lint",
		"format": "pnpm -r format",
		"prepare": "husky"
	},
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		]
	},
	"devDependencies": {
		"concurrently": "^9.2.1",
		"eslint-flat-config-utils": "^2.1.4",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7"
	},
	"lint-staged": {
		"apps/frontend/**/*.{js,ts,tsx,jsx}": [
			"pnpm -F @apps/frontend exec eslint --fix",
			"prettier --write"
		],
		"apps/server/**/*.{js,ts}": [
			"pnpm -F @apps/server exec eslint --fix",
			"prettier --write"
		]
	}
}
